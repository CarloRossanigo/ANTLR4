grammar Teoria;
@header {
    package ANTLR4;
} //da inserire
// Entry point
prog: (decl | expr)+ EOF  #Program
;
// Declarations
decl: ID ':{'((NUM|STRING) (','( NUM|STRING))*)? '}'  #Declaration
;

// Expressions
expr: expr (UNION | INTERSECTION|DIFFERENZA|DIFFERENZASIMMETRICA) expr #UnionIntDiffSimm
    | COMPLEMENTO expr #Compl
    | expr (EQUALS|NEQUAL|CONTENUTODX|CONTENUTOSX) expr #EqNeqCdxCsx
    | ID  #Set
    | LP expr RP #Parens
    ;

// Tokens
ID: [A-Z]+ ;
NUM: '0' | '-'?[0-9]+ ('.' [0-9]+)? ;
UNION: '+' ;
INTERSECTION: '^' ;
DIFFERENZA: '/';
DIFFERENZASIMMETRICA: 'âˆ†';
COMPLEMENTO:'!';
LP: '(' ;
RP: ')' ;
EQUALS: '=';
NEQUAL:'â‰ ';
CONTENUTODX:'â‰¤';
CONTENUTOSX:'â‰¥';
STRING:[a-z]+;
COMMENT: '--' ~[\r\n]* -> skip ;
WS: [ \t\r\n]+ -> skip ;
